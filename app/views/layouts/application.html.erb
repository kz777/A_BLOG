d<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
   <%= stylesheet_link_tag 'application', 'http://fonts.googleapis.com/css?family=Raleway:400,700' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

	<div id="sidebar">
		<div id="logo">
			<%= link_to root_path do %>
			<%= image_tag "logo.png" %>
			<% end %>
		</div>

		<ul>
			<li class="category">Website</li>
			<li><%= link_to "Blog", root_path %></li>
			<li><%= link_to "About", about_path %></li>
		</ul>

		<ul>
			
			
			<li class="category">Social</li>
			 <li> <%= link_to "About Me", "https://about.me/asus7" %></li>
			<li><%= link_to "Github", "https://github.com/kz777" %></li>
			<li><%= link_to "Linkedin", "https://www.linkedin.com/in/aslanussayev" %></li>
			<li><%= link_to "Email", "mailto:usprof777@gmail.com" %></li>
		</ul>

		<% if !user_signed_in? %>
				<button class="sign_in"><%= link_to "Admin", new_user_session_path, method: :get  %></button>
		<% end %>
	</div>

	<div id="main_content">
		<div id="header">
			<% if current_page?(root_path) %>
			<p>All Posts</p>
			<% elsif current_page?(about_path) %>
			<p>About</p>
			<% else %>
			<%= link_to "Back to All Posts", root_path %>
			<% end %>

			<% if user_signed_in? %>
				<div class="buttons">
					<button class="button"><%= link_to "New Post", new_post_path %></button>
					<button class="button"><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></button>
				</div>
			<% end %>
		</div>

		<% flash.each do |name, msg| %>
			<%= content_tag(:div, msg, class: "alert") %>
		<% end %>
		
		<%= yield %>
	</div>
</body>
</html>
